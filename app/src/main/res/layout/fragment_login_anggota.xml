<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAnggota">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@id/textView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_wamika"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Anggota Wamika"
        android:textColor="#148914"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_above="@id/scroll_edit"/>
<ScrollView
    android:id="@+id/scroll_edit"
    android:layout_width="wrap_content"
    android:layout_height="165dp"
    android:layout_centerInParent="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="No Anggota"
            android:textColorHint="#87b787"
            android:inputType="numberSigned"/>

        <EditText
            android:id="@+id/edtNama"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/editText"
            android:ems="10"
            android:hint="Nama Lengkap"
            android:textColorHint="#87b787"/>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/edtNama"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="#87b787"/>
    </RelativeLayout>
</ScrollView>

    <TextView
        android:id="@+id/text_Lupa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/spacer"
        android:layout_below="@id/scroll_edit"
        android:padding="5dp"
        android:text="Lupa Password?"
        android:textSize="12sp"
        android:textColor="#044604"/>
    <Space
        android:id="@+id/spacer"
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:layout_below="@id/scroll_edit"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/text_pengurus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/spacer"
        android:layout_marginStart="5dp"
        android:layout_below="@id/scroll_edit"
        android:padding="5dp"
        android:text="Sebagai Pengurus?"
        android:textSize="12sp"
        android:textColor="#044604"/>
    <Button
        android:id="@+id/btn_login_anggota"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_Lupa"
        android:text="Login"
        android:textColor="@android:color/white"
        android:backgroundTint="#148914"/>
</RelativeLayout>